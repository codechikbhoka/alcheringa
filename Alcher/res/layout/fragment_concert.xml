<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lvib"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#038087"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:background="@drawable/concertbuttonselector"
            android:text="Proshows"
			android:textColor="#000000"
            android:layout_weight="1" />

        <Button
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/concertbuttonselector"
            android:text="Concerts"
            android:textColor="#000000"
            android:layout_weight="1"/>

    </LinearLayout>
    
    <FrameLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="@drawable/background1"
    android:layout_below="@+id/lvib"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <com.iitg.alcher.utils.TouchHighlightImageButton
                android:id="@+id/thumb_button_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <com.iitg.alcher.utils.TouchHighlightImageButton
                android:id="@+id/thumb_button_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <com.iitg.alcher.utils.TouchHighlightImageButton
                android:id="@+id/thumb_button_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <com.iitg.alcher.utils.TouchHighlightImageButton
                android:id="@+id/thumb_button_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

</FrameLayout>

</RelativeLayout>

